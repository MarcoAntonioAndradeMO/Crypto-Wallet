<%= form_with(model: coin) do |form| %>
  <% if coin.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(coin.errors.count, "error") %> prohibited this coin from being saved:</h2>

      <ul>
        <% coin.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group pt-3">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description, class:"form-control", placeholder:"Bitcoin"%>
  </div>

  <div class="form-group pt-2">
    <%= form.label :acronym, style: "display: block" %>
    <%= form.text_field :acronym, class:"form-control", placeholder:"BTC" %>
  </div>

  <div class="form-group pt-2">
    <%= form.label :url_image, style: "display: block" %>
    <%= form.text_field :url_image, class:"form-control", placeholder:"http:img.url/btc/png"%>
    <% if coin.url_image.present? %>
      <%= image_tag coin.url_image, width: 30, height: 30 %>
    <% end %>
  </div>

  <div class="form-group pt-2">
    <%= form.label :mining_type, style: "display: block" %>
    <%= form.select("mining_type_id", MiningType.all.pluck(:description, :id), {include_blank:"Selecione..."}, class:"form-control")%>
  </div>




  <div class="actions pt-2">
    <%= form.submit nil ,class:"btn btn-primary" %>
  </div>
<% end %>

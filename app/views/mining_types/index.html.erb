<p style="color: green"><%= notice %></p>

<h1><%= MiningType.model_name.human(count: @mining_types.count) %></h1>

<table class="table">
  <thead>
  <tr>
    <th><%= @mining_types.human_attribute_name(:description) %></th>
    <th><%= @mining_types.human_attribute_name(:acronym) %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @mining_types.each do |mining_type| %>
    <tr>
      <td><%= mining_type.description %></td>
      <td><%= mining_type.acronym %></td>
      <td><%= link_to t('showing.mining_type'), mining_type %></td>
      <td><%= link_to t('editing.mining_type'), edit_mining_type_path(mining_type) %></td>
      <td><%= link_to t('delete.mining_type'), mining_type, method: :delete, data: { confirm: t('messages.confirm') } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to t('new.mining_type'), new_mining_type_path %>
